@model List<Product>
@{
    ViewBag.Title = "Danh sách sản phẩm";
}

<h2>Sản phẩm</h2>

@if (TempData["message"] != null)
{
    <div class="alert alert-success">@TempData["message"]</div>
}

<table class="table">
    <tr><th>Tên</th><th>Giá</th><th>Mô tả</th><th></th></tr>
    @foreach (var p in Model)
    {
        <tr>
            <td>@p.Name</td>
            <td>@p.Price.ToString("N0") đ</td>
            <td>@p.Description</td>
            <td>
                <a class="btn btn-primary" href="/Product/AddToCart/@p.Id">Thêm vào giỏ hàng</a>
            </td>
        </tr>
    }
</table>

<a class="btn btn-success" href="/Cart/Index">Xem giỏ hàng</a>
